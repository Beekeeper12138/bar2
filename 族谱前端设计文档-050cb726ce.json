{
    "首页": {
        "功能": "展示家族概览和快速导航",
        "组件": [
            "家族分支选择器",
            "时间线概览",
            "最近更新成员",
            "最近事件"
        ]
    },
    "成员管理": {
        "功能": "管理家族成员信息",
        "子页面": {
            "成员列表": {
                "组件": [
                    "搜索栏",
                    "成员表格",
                    "分页控件"
                ]
            },
            "成员详情": {
                "组件": [
                    "基本信息卡片",
                    "亲属关系图",
                    "关联事件列表",
                    "编辑按钮"
                ]
            },
            "新增成员": {
                "表单字段": [
                    {
                        "字段名": "姓名",
                        "类型": "text",
                        "必填": true
                    },
                    {
                        "字段名": "性别",
                        "类型": "radio",
                        "选项": [
                            "男",
                            "女"
                        ],
                        "必填": true
                    },
                    {
                        "字段名": "出生日期",
                        "类型": "date",
                        "必填": true
                    },
                    {
                        "字段名": "死亡日期",
                        "类型": "date",
                        "必填": false
                    },
                    {
                        "字段名": "出生地",
                        "类型": "text",
                        "必填": true
                    },
                    {
                        "字段名": "居住地",
                        "类型": "text",
                        "必填": false
                    },
                    {
                        "字段名": "生平简介",
                        "类型": "textarea",
                        "必填": false
                    },
                    {
                        "字段名": "照片",
                        "类型": "file",
                        "必填": false
                    }
                ]
            }
        }
    },
    "关系管理": {
        "功能": "管理成员间的关系",
        "子页面": {
            "关系图": {
                "组件": [
                    "可视化关系图",
                    "关系筛选器"
                ]
            },
            "新增关系": {
                "表单字段": [
                    {
                        "字段名": "成员1",
                        "类型": "select",
                        "数据源": "Individual",
                        "必填": true
                    },
                    {
                        "字段名": "成员2",
                        "类型": "select",
                        "数据源": "Individual",
                        "必填": true
                    },
                    {
                        "字段名": "关系类型",
                        "类型": "select",
                        "选项": [
                            "父亲",
                            "母亲",
                            "子女",
                            "配偶",
                            "兄弟",
                            "姐妹"
                        ],
                        "必填": true
                    }
                ]
            }
        }
    },
    "事件管理": {
        "功能": "管理家族和历史事件",
        "子页面": {
            "事件列表": {
                "组件": [
                    "时间筛选器",
                    "事件表格",
                    "分页控件"
                ]
            },
            "事件详情": {
                "组件": [
                    "事件基本信息",
                    "关联成员列表",
                    "关联家族列表",
                    "编辑按钮"
                ]
            },
            "新增事件": {
                "表单字段": [
                    {
                        "字段名": "事件标题",
                        "类型": "text",
                        "必填": true
                    },
                    {
                        "字段名": "事件日期",
                        "类型": "date",
                        "必填": true
                    },
                    {
                        "字段名": "事件描述",
                        "类型": "textarea",
                        "必填": true
                    },
                    {
                        "字段名": "关联成员",
                        "类型": "multiselect",
                        "数据源": "Individual",
                        "必填": false
                    },
                    {
                        "字段名": "关联家族",
                        "类型": "multiselect",
                        "数据源": "FamilyBranch",
                        "必填": false
                    }
                ]
            }
        }
    },
    "查询统计": {
        "功能": "查询和统计分析家族数据",
        "子页面": {
            "成员查询": {
                "组件": [
                    "高级搜索表单",
                    "结果表格",
                    "导出按钮"
                ]
            },
            "关系查询": {
                "组件": [
                    "关系路径查询表单",
                    "关系图展示"
                ]
            },
            "统计分析": {
                "组件": [
                    "统计图表",
                    "数据表格",
                    "导出按钮"
                ]
            }
        }
    }
}